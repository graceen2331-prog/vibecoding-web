# .env.example

# Frontend Environment Variables
VITE_APP_NAME=Vibe Coding
VITE_API_URL=http://localhost:3001
VITE_APP_URL=http://localhost:5173

# Analytics
VITE_POSTHOG_API_KEY=your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# Backend Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://vibecoding:password@localhost:5432/vibecoding_dev

# Supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=

# Authentication
JWT_SECRET=your_jwt_secret_key_should_be_very_long_and_random
MAGIC_LINK_SECRET=your_magic_link_secret
MAGIC_LINK_EXPIRES_IN=15m
JWT_EXPIRES_IN=7d

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/github/callback

# Email (for Magic Links)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@vibecoding.io

# Application Settings
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:5173
