# Backend Environment Variables - 生产环境配置示例
# 复制此文件为 .env 并填入实际值

# 环境
NODE_ENV=production
PORT=3001

# 前端地址（重要：必须匹配你的 Vercel 域名）
FRONTEND_URL=https://vibecoding.vercel.app
CORS_ORIGIN=https://vibecoding.vercel.app

# 数据库 (Railway PostgreSQL 或 Supabase)
# 格式: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:5432/vibecoding

# JWT 认证（生成长随机字符串，至少 32 个字符）
JWT_SECRET=generate_a_very_long_random_secret_key_with_at_least_32_characters
MAGIC_LINK_SECRET=generate_another_long_random_secret_key_for_magic_links
JWT_EXPIRES_IN=7d
MAGIC_LINK_EXPIRES_IN=15m

# Supabase (可选，用于文件存储)
SUPABASE_URL=https://xwmwhfjjdehucvjdekto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# 邮件配置 (生产环境使用真实 SMTP)
# 推荐使用 SendGrid，Mailgun 或 AWS SES
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here
SMTP_FROM=noreply@vibecoding.io

# 日志级别
LOG_LEVEL=info
